#!/bin/sh

set -e

FILES=$(git diff-tree --no-commit-id --name-only --diff-filter=ACM -r origin/master..HEAD)
echo "number of files to be checked=$(echo "$FILES" | wc -w)"
# doing this per GDC requirements
pre-commit run --files $FILES
# run linter on ts files
echo "linting ..."
# echo "$FILES" | grep "\.ts" | xargs npx eslint
echo "$FILES" | grep "shared\/" | xargs npx eslint --env shared-node-browser
echo "$FILES" | grep "client\/" | xargs npx eslint --env browser
echo "$FILES" | grep "front\/" | xargs npx eslint --env browser
echo "$FILES" | grep "rust\/" | xargs npx eslint --env node
echo "$FILES" | grep "server\/" | xargs npx eslint --env node
exit 0
